#include <stdint.h>
#include <stdio.h>

#define TIME2_IRQ 28
#define I2C1_EV_IRQ 31

#define NVIC_BASE_ADDRESS 0XE000E000

void Interrupt_Prioriy_Config(uint8_t irq_number , uint8_t priority){
	// find out iprx
	uint32_t *NVIC_IPR = (uint32_t*)(NVIC_BASE_ADDRESS + 0x400 + (irq_number/4));
	// position in iprx
	uint8_t pos = (irq_number %4)*8 ;
	// config the priority
	*NVIC_IPR &= ~(0xFF << pos);//clear;
	*NVIC_IPR |= (priority << pos);

}


int main(void)
{
	//config priorty
	Interrupt_Prioriy_Config(TIME2_IRQ, 0x80);
	Interrupt_Prioriy_Config(I2C1_EV_IRQ, 0x80);
	//pending irq
	uint32_t* NVIC_ISPR = (uint32_t*)(NVIC_BASE_ADDRESS + 0x200 + (I2C1_EV_IRQ/32));
	*NVIC_ISPR |= (0x1 << (TIME2_IRQ %32));
	//enable irq
	uint32_t* NVIC_ISER = (uint32_t*)(NVIC_BASE_ADDRESS + 0x100 + (I2C1_EV_IRQ/32));//due to I2C1&Time2 in smae IRQ Group
	*NVIC_ISER |= (0x1 <<(I2C1_EV_IRQ %32));
	*NVIC_ISER |= (0x1 <<(TIME2_IRQ %32));


    /* Loop forever */
	for(;;);
}

void I2C1_EV_IRQHandler(){
	printf("Now is In I2C1 IRQ \n");
}

void TIM2_IRQHandler(){
	printf("Now is In TIM2 IRQ \n");
	while(1);
}


